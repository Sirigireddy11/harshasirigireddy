
#include<stdio.h>
#include<pthread.h>
#include<semaphore.h>
#include<unistd.h>
sem_t wrt;
int readcount=0,data=1;
void *reader(void *arg)
{
sem_wait(&wrt);
readcount++;
printf("Reader reads %d\n",data);
readcount--;
sem_post(&wrt);
return NULL;
}
void *writer(void *arg)
{
sem_wait(&wrt);
data++;
printf("Writer writes %d\n",data);
sem_post(&wrt);
return NULL;
}
int main()
{
pthread_t r,w;
sem_init(&wrt,0,1);
pthread_create(&r,NULL,reader,NULL);
pthread_create(&w,NULL,writer,NULL);
pthread_join(r,NULL);
pthread_join(w,NULL);
return 0;
}
