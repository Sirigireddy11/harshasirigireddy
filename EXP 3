#include <stdio.h>

int main() {
    int n, bt[10], wt[10], tat[10];
    int i, totalWT = 0, totalTAT = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time:\n");
    for(i=0;i<n;i++) scanf("%d",&bt[i]);

    wt[0] = 0;

    for(i=1;i<n;i++)
        wt[i] = wt[i-1] + bt[i-1];

    for(i=0;i<n;i++) {
        tat[i] = wt[i] + bt[i];
        totalWT += wt[i];
        totalTAT += tat[i];
    }

    printf("\nP\tBT\tWT\tTAT\n");
    for(i=0;i<n;i++)
        printf("%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);

    printf("\nAvg WT = %.2f", (float)totalWT/n);
    printf("\nAvg TAT = %.2f\n", (float)totalTAT/n);

    return 0;
}
