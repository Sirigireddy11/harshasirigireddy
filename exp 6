#include <stdio.h>

int main() {
    int n, tq, i, time = 0, done;
    int bt[10], rt[10];

    printf("Enter number of processes and time quantum: ");
    scanf("%d %d", &n, &tq);

    for (i = 0; i < n; i++) {
        printf("Enter burst time of P%d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    do {
        done = 1;
        for (i = 0; i < n; i++) {
            if (rt[i] > 0) {
                done = 0;
                if (rt[i] > tq) {
                    time += tq;
                    rt[i] -= tq;
                } else {
                    time += rt[i];
                    rt[i] = 0;
                    printf("P%d completed at time %d\n", i + 1, time);
                }
            }
        }
    } while (!done);

    return 0;
}
